@page "/car/{licensePlate}"

<div class="col">
    <div class="row">
        <h3>@LicensePlate</h3>
    </div>
    @if (CarStatistic != null)
    {
        <div class="row">
            <div class="card w-100">
                <div class="card-header">
                    Statistics
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <div class="row">
                            <h5 class="col">Distance</h5>
                            <div class="col">
                                <div class="row justify-content-around">
                                    <div>Total:</div>
                                    <div>@CarStatistic.TotalDistance.ToString("N0") km</div>
                                </div>
                                <div class="row justify-content-around">
                                    <div>Average:</div>
                                    <div>@CarStatistic.AvgDistance.ToString("N0") km</div>
                                </div>
                            </div>
                        </div>
                    </li>
                    <li class="list-group-item">
                        <div class="row">
                            <h5 class="col">Cost</h5>
                            <div class="col">
                                <div class="row justify-content-around">
                                    <div>Total:</div>
                                    <div>@CarStatistic.TotalCost.ToString("N2") €</div>
                                </div>
                                <div class="row justify-content-around">
                                    <div>Average:</div>
                                    <div>@CarStatistic.AvgCost.ToString("N2") €</div>
                                </div>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }

    <div class="row">
        <AddRefuelEntryComponent LicensePlate="@LicensePlate" />
    </div>

    <div class="row">
        <AddServiceEntryComponent LicensePlate="@LicensePlate" />
    </div>

    <div class="row">
        <RefuelEntryList LicensePlate="@LicensePlate" />
    </div>

    <div class="row">
        <ServiceEntryList LicensePlate="@LicensePlate" />
    </div>
</div>
<div class="user-info">
    <AuthorizeView>
        <Authorizing>
            <text>...</text>
        </Authorizing>
        <Authorized>
            <div>
                <span class="username">@context.User.Identity.Name</span>
                <a class="btn btn-danger" href="api/authentication/signout"><span class="oi oi-account-logout"></span> Sign out</a>
            </div>
        </Authorized>
        <NotAuthorized>
            <a class="sign-in" href="api/authentication/signin">Sign in</a>
        </NotAuthorized>
    </AuthorizeView>
</div>
